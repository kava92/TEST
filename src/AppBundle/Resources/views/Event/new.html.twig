{% extends '::base.html.twig' %}

{% block top %}
    <h1 class="text-center">Add event</h1>
{% endblock %} 

{% block middle -%}

    <div class="col-md-2"></div>
    <div class="col-md-8">
    {{ form_start(form, {'attr':{'role':'form'}}) }}
   
    <div class="form-group">
        <label for="form_name">Name: </label>

        {{ form_widget(form.name, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_description">Description: </label>

        {{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_date">Date: </label>
        {{ form_widget(form.date)}}
    </div>
    <div class="form-group">
        <label for="form_city">City: </label>
        {{ form_widget(form.city, {'attr':{'class':'form-control'}})}}
    </div>
   <div class="form-group">
        <label for="form_street">Street: </label>
        {{ form_widget(form.street, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_streetNumber">Street number: </label>
        {{ form_widget(form.streetNumber, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_flatNumber">Flat number: </label>
        {{ form_widget(form.flatNumber, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_postcode">Postcode: </label>
        {{ form_widget(form.postcode, {'attr':{'class':'form-control'}})}}
    </div>
    <div class="form-group">
        <label for="form_eventAdmin">Event admin: </label>
        {{ form_widget(form.eventAdmin, {'attr':{'class':'form-control'}})}}
    </div>
    <input class="btn btn-custom" type="submit" value="{{ 'Add'|trans }}" />
    
    {{ form_end(form) }}
    </div>
    <div class="col-md-2"></div>

{% endblock %}
